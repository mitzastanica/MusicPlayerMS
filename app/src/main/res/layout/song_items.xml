<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding">

    <LinearLayout
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/song_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/song_name_style"
                android:layout_marginBottom="@dimen/text2_margin_bottom"/>

            <TextView
                android:id="@+id/artist_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/artist_song_name_style"/>

        </LinearLayout>

            <ImageView
                android:layout_width="@dimen/image_layout_width"
                android:layout_height="@dimen/image_layout_height"
                android:id="@+id/song_icon" />

</LinearLayout>